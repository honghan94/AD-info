@model MyProject.Controllers.ResetModel

@Html.AntiForgeryToken()
@if (ViewBag.Message != null)
{
    <span class="text-success">@ViewBag.Message</span>
}
<span class="alert-danger">
    @Html.ValidationSummary()
</span>
<div id="load-ajax" style="display: none;">
    <div class="spinner">Loading...</div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.SamAccountName) :
    @Html.DisplayFor(model => model.SamAccountName)
    @Html.HiddenFor(model => model.SamAccountName, new { @class = "form-control" })
</div>
<div class="form-group">
    New Password
    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
</div>
<div class="form-group">
    Reenter Password
    @Html.PasswordFor(model => model.SecPass, new { @class = "form-control" })
</div>